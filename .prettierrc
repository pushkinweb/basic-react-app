{
  "printWidth": 120,
  "tabWidth": 4,
  "useTabs": false,
  "singleQuote": true,
  "jsxSingleQuote": true,
  "semi": false,
  "trailingComma": "none",
  "arrowParens": "always",
  "quoteProps": "consistent",
  "endOfLine": "auto",
  "importOrder": [
    "<THIRD_PARTY_MODULES>",
    "/config/",
    "/public/",
    "/app/",
    "/pages/",
    "/widgets/",
    "/features/",
    "/entities/",
    "/shared/",
    "^../(.*)",
    "^./(.*)",
    "^./(.scss)"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true,
  "overrides": [
    {
      "files": "*.{json,yml,md,scss,sass,css}",
      "options": {
        "tabWidth": 2
      }
    },
    {
      "files": "*.{ts,tsx}",
      "options": {
        "parser": "typescript"
      }
    }
  ]
}
